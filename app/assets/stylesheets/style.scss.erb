html {
  height: 100%;
  margin: 0;
  padding: 0;
  background: url(https://picsum.photos/1920/1080/?random), image-url('grey-concrete.png');
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
}

body {
 	height: 100%;
 	background-color: transparent !important;
}

.sidebars {
	padding-top: 55px;
}

.title {
  font-family: 'Righteous', cursive;
}

.allPlaces {
	display: table;
	vertical-align: middle;
}

.leftbar {
	vertical-align: middle;
	display: table-cell;
}

.rightbar {
	vertical-align: middle;
	display: table-cell;
}

.theme {
  font-family: 'Open Sans', sans-serif;
}

.jumboform {
  background-color: rgba($color: #343a40, $alpha: 0.75) !important;
  color: white;
  min-width: 300px;
  margin-top: 17vh;
}

.scrolly {
  overflow: scroll;
  overflow-x: hidden;
}
::-webkit-scrollbar {
  width: 0px; /* remove scrollbar space */
  background: transparent; /* optional: just make scrollbar invisible */
}
/* optional: show position indicator in red */
::-webkit-scrollbar-thumb {
  background: #ff0000;
}

#map {
  height: auto;
  width: 100%;
}

#test {
	height: 100%;
	width: 100%;
	position: absolute;
	z-index: 10;
}

#midFinder {
	bottom: 20px;
	z-index: 20;
	position: absolute;
	// padding:px;
}

.scrolly {
	z-index: 20;
}

.avatars {
  background-color: transparent;
  border-color: transparent;
  padding: 5px;
}

ul .list-unstyled {
  padding: 0px;
}

ul .dropdown-menu {
  padding: 4px 7px 3px 16px;
}

ul .dropdown-menu img:hover {
  background-color: #0f7ffeff;
}

.stars-outer {
  display: inline-block;
  position: relative;
  font-family: FontAwesome;
}

.stars-outer::before {
  content: '\f006 \f006 \f006 \f006 \f006';
  color: #999998FF;
}

.stars-inner {
  position: absolute;
  top: 0;
  left: 0;
  white-space: nowrap;
  overflow: hidden;
  width: 0;
}

.stars-inner::before {
  content: '\f005 \f005 \f005 \f005 \f005';
  color: #f8b703;
}

.scrolly {
	opacity: 0.9;
}

#type{
	opacity: 0.9;
}

.p-2 {
	opacity: 0.9;
}

.places-images {
	width: 100px;
	height: 100px;
}

.places-images img{
	width:100%;
	height: 100%;
	object-fit: contain;
}

@media only screen and (max-width: 990px) {
	#map {
		height: 50vh;
	}
}
